---
import HeaderLink from "./HeaderLink.astro";
import SocialLinks from "./social-links/SocialLinks.astro";
import { getRelativeLocaleUrl } from "astro:i18n";
import { useTranslations } from "../ui";

const { t } = useTranslations(Astro.currentLocale);
---

<header>
  <nav>
    <h2>
      <a href={getRelativeLocaleUrl(Astro.currentLocale ?? "ru", "/")}>AV</a>
    </h2>
    <div class="internal-links">
      <HeaderLink
        href={getRelativeLocaleUrl(Astro.currentLocale ?? "ru", "/about")}
        >{t("menu.averdizm")}</HeaderLink
      >
      <HeaderLink
        href={getRelativeLocaleUrl(Astro.currentLocale ?? "ru", "/artists")}
        >{t("menu.artists")}</HeaderLink
      >
      <HeaderLink
        href={getRelativeLocaleUrl(Astro.currentLocale ?? "ru", "/arts")}
        >{t("menu.arts")}</HeaderLink
      >
    </div>
    <SocialLinks hideOnMobile />
  </nav>
</header>

<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: white;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }
  h2 {
    margin: 0;
    font-size: 1em;
  }

  h2 a {
    color: rgb(var(--black));
    text-decoration: none;
  }
  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
</style>
