---
import { ui } from "../ui";
import { getRelativeLocaleUrl } from "astro:i18n";

type Props = {
  pale?: boolean;
};

const { pale } = Astro.props;

let currentPath = Astro.url.pathname;

if (Astro.currentLocale) {
  currentPath = currentPath.replace(`/${Astro.currentLocale}`, "");
}
---

<ul class="language-picker">
  {
    Object.keys(ui).map(
      (language) =>
        language !== Astro.currentLocale && (
          <li class:list={["language", { pale: pale }]}>
            <a href={getRelativeLocaleUrl(language, currentPath)}>
              {language[0].toLocaleUpperCase() + language.substring(1)}
            </a>
          </li>
        )
    )
  }
</ul>

<style>
  .language-picker {
    display: flex;
    justify-content: center;
    padding: 0;
    margin: 0;
  }

  .language {
    list-style: none;
    padding: 1.37em 0.3em 2px;
  }

  @media (max-width: 768px) {
    .language {
      padding-top: 1.3em;
    }
  }

  .language a {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20px;
    height: 32px;
    width: 28px;

    margin: 4px 4px;
    padding: 4px 7px;
    border-radius: 6px;
    background-color: rgb(var(--gray-dark));
    font-weight: bold;
    color: #fff;
    text-decoration: none;
  }

  @media (max-width: 720px) {
    .language a {
      margin-top: 6px;
    }
  }

  .language.pale a {
    background-color: rgb(var(--gray));
  }

  .language:hover a {
    background-color: rgb(var(--black));
    cursor: pointer;
  }
</style>
